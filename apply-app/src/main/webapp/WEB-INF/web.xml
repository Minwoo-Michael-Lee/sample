<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>NEIS Apply Support</display-name>

    <!-- DB Config (env 우선, 없으면 context-param 사용) -->
    <context-param>
        <param-name>DB_URL</param-name>
        <param-value>jdbc:mariadb://localhost:3306/NEISDB</param-value>
    </context-param>
    <context-param>
        <param-name>DB_USER</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>DB_PASSWORD</param-name>
        <param-value>root</param-value>
    </context-param>

    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.neis.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.neis.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>CollegeApplyServlet</servlet-name>
        <servlet-class>com.neis.servlet.CollegeApplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CollegeApplyServlet</servlet-name>
        <url-pattern>/api/college-apply</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CollegeReceiveStatusServlet</servlet-name>
        <servlet-class>com.neis.servlet.CollegeReceiveStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CollegeReceiveStatusServlet</servlet-name>
        <url-pattern>/api/college-receive-status</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>
</web-app>


