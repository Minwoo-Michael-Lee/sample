<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>NEIS Parents Service</display-name>
    <description>나이스 학부모서비스 웹 애플리케이션</description>

    <!-- DB 설정 (환경변수 NEIS_DB_URL/USER/PASSWORD 가 있으면 우선 적용) -->
    <context-param>
        <param-name>NEIS_DB_URL</param-name>
        <param-value>jdbc:mariadb://localhost:3306/NEISDB?useUnicode=true&amp;characterEncoding=UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>NEIS_DB_USER</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>NEIS_DB_PASSWORD</param-name>
        <param-value></param-value>
    </context-param>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.neis.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.neis.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- API Servlets -->
    <servlet>
        <servlet-name>AttendanceServlet</servlet-name>
        <servlet-class>com.neis.servlet.AttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceServlet</servlet-name>
        <url-pattern>/api/attendance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VolunteerServlet</servlet-name>
        <servlet-class>com.neis.servlet.VolunteerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VolunteerServlet</servlet-name>
        <url-pattern>/api/volunteer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GradeTrendServlet</servlet-name>
        <servlet-class>com.neis.servlet.GradeTrendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GradeTrendServlet</servlet-name>
        <url-pattern>/api/grade-trend</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StandardScoreServlet</servlet-name>
        <servlet-class>com.neis.servlet.StandardScoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StandardScoreServlet</servlet-name>
        <url-pattern>/api/standard-score</url-pattern>
    </servlet-mapping>

    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>
    
</web-app>

